{
  "serviceName": "HiveMetaStore",
  /* Reporter defines where collected metrics are sent to */
  "reporter": {
    "type": "falcon",
    "options": {
      "apiUrl": "http://127.0.0.1:1988/v1/push",
      "step": "60"
    }
  },
  /* Endpoint specifies the JVM from which metrics are collected */
  "endpoints": [
    {
      "name": "dev-hdp-nn02:5555",
      "remote": true
    },
    {
      "name": ".*HiveMetaStore.*",
      "remote": false
    }
  ],
  "queries": [
    {
      "groupName": "Memory",
      "objectName": "java.lang:type=Memory",
      "attributes": [{
        "name": "HeapMemoryUsage.used",
        "type": "gauge"
      }, {
        "name": "HeapMemoryUsage.committed",
        "type": "gauge"
      }, {
        "name": "HeapMemoryUsage.max",
        "type": "gauge"
      }, {
        "name": "NonHeapMemoryUsage.used",
        "type": "gauge"
      }, {
        "name": "NonHeapMemoryUsage.committed",
        "type": "gauge"
      }, {
        "name": "NonHeapMemoryUsage.max",
        "type": "gauge"
      }]
    }, {
      "groupName": "EdenSpace",
      "objectName": "java.lang:type=MemoryPool,name=PS Eden Space",
      "attributes": [{
        "name": "Usage.used",
        "type": "gauge"
      }, {
        "name": "Usage.committed",
        "type": "gauge"
      }, {
        "name": "Usage.max",
        "type": "gauge"
      }]
    }, {
      "groupName": "SurvivorSpace",
      "objectName": "java.lang:type=MemoryPool,name=PS Survivor Space",
      "attributes": [{
        "name": "Usage.used",
        "type": "gauge"
      }, {
        "name": "Usage.committed",
        "type": "gauge"
      }, {
        "name": "Usage.max",
        "type": "gauge"
      }]
    }, {
      "groupName": "OldSpace",
      "objectName": "java.lang:type=MemoryPool,name=PS Old Gen",
      "attributes": [{
        "name": "Usage.used",
        "type": "gauge"
      }, {
        "name": "Usage.committed",
        "type": "gauge"
      }, {
        "name": "Usage.max",
        "type": "gauge"
      }]
    }, {
      "groupName": "PermSpace",
      "objectName": "java.lang:type=MemoryPool,name=PS Perm Gen",
      "attributes": [{
        "name": "Usage.used",
        "type": "gauge"
      }, {
        "name": "Usage.committed",
        "type": "gauge"
      }, {
        "name": "Usage.max",
        "type": "gauge"
      }]
    }, {
      "groupName": "MinorGC",
      "objectName": "java.lang:type=GarbageCollector,name=PS Scavenge",
      "attributes": [{
        "name": "CollectionCount",
        "type": "counter"
      }, {
        "name": "CollectionTime",
        "type": "counter"
      }, {
        "name": "LastGcInfo.GcThreadCount",
        "type": "gauge"
      }, {
        "name": "LastGcInfo.duration",
        "type": "gauge"
      }]
    }, {
      "groupName": "MajorGC",
      "objectName": "java.lang:type=GarbageCollector,name=PS MarkSweep",
      "attributes": [{
        "name": "CollectionCount",
        "type": "counter"
      }, {
        "name": "CollectionTime",
        "type": "counter"
      }, {
        "name": "LastGcInfo.GcThreadCount",
        "type": "gauge"
      }, {
        "name": "LastGcInfo.duration",
        "type": "gauge"
      }]
    }
  ]
}